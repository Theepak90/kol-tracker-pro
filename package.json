{
  "name": "kolopz",
  "private": true,
  "version": "1.0.0",
  "homepage": "https://kolopz.com",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "chmod +x build.sh && ./build.sh",
    "build:backend": "cd backend && npm install --legacy-peer-deps && npm run build",
    "build:frontend": "tsc && npx vite build",
    "build:all": "npm run build:frontend && npm run build:backend",
    "render:build": "chmod +x build.sh && ./build.sh",
    "start": "node start-render.js",
    "start:backend": "node backend/dist/main.js",
    "start:render": "cd backend && node dist/main.js",
    "serve": "node serve.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 3000 --host 0.0.0.0",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "start-all": "chmod +x start.sh && ./start.sh",
    "stop-all": "chmod +x stop.sh && ./stop.sh",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "build:prod": "npm run build && npm run serve"
  },
  "dependencies": {
    "@grammyjs/types": "^3.5.2",
    "@solana/spl-token": "^0.1.8",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-phantom": "^0.9.28",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-solflare": "^0.6.32",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "big-integer": "^1.6.52",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "input": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.4",
    "openai": "^4.28.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.6.3",
    "recharts": "^2.10.3",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^7.0.2",
    "web3": "^4.5.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vercel/node": "^5.3.6",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5"
  }
}
